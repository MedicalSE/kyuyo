<%= form_for(@payslip) do |f| %>
  <% if @payslip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payslip.errors.count, "error") %> prohibited this payslip from being saved:</h2>

      <ul>
      <% @payslip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table table-bordered">
    <tr>
      <th> <%= f.label :payslip_date %></th>
      <td colspan="2"> <%= f.date_select :payslip_date, { discard_day: true, use_month_numbers: true }, { class: 'input-small' } %> </td>
    </tr>
    <tr>
      <th> <%= f.label :name %></th>
      <td colspan="2"> <%= f.text_field :name %> </td>
    </tr>
    <tr>
      <th> <%= f.label :work_from %></th>
      <td colspan="2"> <%= f.date_select :work_from, {}, { class: 'input-small' } %> </td>
    </tr>
    <tr>
      <th> <%= f.label :work_to %></th>
      <td colspan="2"> <%= f.date_select :work_to, {}, { class: 'input-small' } %> </td>
    </tr>
    <tr>
      <th> <%= f.label :working_days %> </th>
      <td colspan="2"> <%= f.number_field :working_days %> </td>
    </tr>
    <tr>
      <th> <%= f.label :working_time %> </th>
      <td colspan="2"> <%= f.text_field :working_time %> </td>
    </tr>
    <tr>
      <th rowspan="2">支給額</th>
      <th> <%= f.label :basic_pay %> </th>
      <td> <%= f.number_field :basic_pay %> </td>
    </tr>
    <tr>
      <th> <%= f.label :transportation_expenses %> </th>
      <td> <%= f.number_field :transportation_expenses %> </td>
    </tr>
    <tr>
      <th rowspan="2">控除額</th>
      <th> <%= f.label :income_tax %> </th>
      <td> <%= f.number_field :income_tax %> </td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit value: 'PDFをダウンロード', class: 'btn btn-large btn-primary' %>
  </div>
<% end %>
